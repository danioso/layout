.body
  width 100%
  top 60px
  left 0px
  bottom 0px
  position fixed
  
  .sidebar
    width 200px
    float left 
    height 100%
    overflow hidden
    overflow-y auto
    padding 20px
    
  .main 
    float left
    position absolute
    left 200px
    top 0px
    bottom 0px
    right 0px
    overflow hidden
    overflow-y auto
    padding 0 0 0 0  
    
  .details
    width 500px
    float right 
    height 100%
    overflow hidden
    overflow-y auto
    padding 20px
    position relative
    z-index 11
    
.with-nav 
  padding-top 50px !important

  nav 
    position fixed
    margin-top -50px
    height 50px
    left 200px
    right 0px
    background #f7f7f7
    padding 5px 20px 0 20px
    border-bottom 1px solid #ddd
    z-index 10
    margin-left 1px
    
    ul 
      li 
        height 40px
        line-height 40px
        float left
        margin-left 10px
        
        &:first-of-type
          margin-left 0px

 
.with-details
  .sidebar
    width 200px
  .main 
    
    right 60% !important 
  .with-nav  
    nav 
      right 60% 
  .with-nav 
    .pull-left 
      display none
    
  .details
    width 60% !important
    
    nav 
      left 40% 
      right 0px